{
  "name": "sisacad-backend",
  "version": "0.0.1",
  "description": "Backend para el Sistema Acad√©mico (SisAcad)",
  "author": "",
  "main": "dist/index.js",
  "private": true,
  "licence": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production rm -rf dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev:watch:ts": "cross-env NODE_ENV=development tsc --watch --preserveWatchOutput --noEmit",
    "dev:watch:tsx": "cross-env NODE_ENV=development tsx watch --clear-screen=false src/index.ts",
    "dev": "concurrently --handle-input -k -n \"TYPES,SERVER\" -p \"[{name}]\" -c \"yellow.bold,cyan.bold\" \"npm run dev:watch:ts\" \"npm run dev:watch:tsx\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "seed": "tsx src/infraestructure/scripts/seed.ts"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "4.0.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "csv-parse": "^6.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.6",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
